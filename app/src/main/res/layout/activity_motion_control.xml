<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.rpimc.hari.rpimc.MotionControl">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="65dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/motion_text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Stopped"
        android:textSize="50dp"
        android:id="@+id/motion_text"
        android:textColor="#6ACA25"
        android:layout_below="@+id/motion_text1"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/motion_button"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/button"
        android:layout_below="@+id/motion_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/motion_progressBar"
        android:visibility="invisible"
        android:layout_below="@+id/motion_text"
        android:layout_alignRight="@+id/motion_button"
        android:layout_alignEnd="@+id/motion_button" />
</RelativeLayout>
